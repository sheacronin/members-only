<!DOCTYPE html>
<html>
    <%- include('head'); -%>
    <body>
        <%- include('header'); -%>
        <main>
            <h1><%= title %></h1>
            <p>
                Welcome to <%= title %><% if (currentUser) { %>, <%=
                currentUser.username %> <% } %>
            </p>

            <% messages.forEach(message => { %>
            <article class="message">
                <h2><%= message.title %></h2>
                <% if (currentUser && currentUser.isMember) { %>
                <p class="byline">
                    By <%= message.author.username %> at <%= message.timestamp
                    %>
                </p>
                <% } %>
                <p class="message-text"><%= message.text %></p>
                <% if (currentUser && currentUser.isAdmin) { %>
                <form action="" method="POST">
                    <input
                        type="hidden"
                        name="messageId"
                        id="messageId"
                        required
                        value="<%= message.id %>"
                    />
                    <button class="delete-btn">
                        <i class="material-icons">delete</i>
                        <p>Delete</p>
                    </button>
                </form>
                <% } %>
            </article>
            <% }) %>
        </main>
    </body>
</html>
